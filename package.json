{
    "name": "design-system",
    "version": "1.0.0",
    "description": "NPM configuration for Design System Plugin development.",
    "author": "Vatu <info@vatu.dev>",
    "license": "MIT",
    "engines": {
        "npm": "^10.9",
        "node": "^22.13"
    },
    "scripts": {
        "test-wp": "wp-scripts build --webpack-src-dir=./src/Domain/ExampleBlocks/Blocks/",
        "format": "wp-scripts format",
        "lint:css": "wp-scripts lint-style",
        "lint:js": "wp-scripts lint-js",
        "start": "run-s 'start:scripts:blocks'",
        "build": "run-s 'build:scripts:blocks'",
        "wp-env": "wp-env",
        "composer": "wp-env run cli --env-cwd=wp-content/plugins/design-system composer",
        "integration-unit": "wp-env run tests-cli --env-cwd=wp-content/plugins/design-system ./tools/vendor/bin/phpunit --testsuite=unit",
        "integration-test": "wp-env run tests-cli --env-cwd=wp-content/plugins/design-system ./tools/vendor/bin/phpunit -c ./phpintegration.dist.xml --testsuite=integration"
    },
    "devDependencies": {
        "@wordpress/compose": "^7.31.0",
        "@wordpress/create-block": "^4.77.0",
        "@wordpress/env": "^10.32.0",
        "@wordpress/plugins": "^7.33.0",
        "@wordpress/scripts": "^30.27.0",
        "npm-run-all": "^4.1.5",
        "path": "^0.12.7",
        "webpack-remove-empty-scripts": "^1.1.1"
    }
}
